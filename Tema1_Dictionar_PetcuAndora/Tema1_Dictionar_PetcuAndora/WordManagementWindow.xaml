<Window x:Class="DictionaryApp.WordManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Management" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Cauta cuvant:"/>
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,0,10" TextChanged="txtSearch_TextChanged"/>

            <Label Content="Selecteaza Cuvant:"/>
            <ComboBox x:Name="cmbWords" Width="200" SelectionChanged="cmbWords_SelectionChanged"/>

            <Label Content="Categorie:"/>
            <TextBox x:Name="txtWord"/>

            <Label Content="Cuvant:"/>
            <TextBox x:Name="txtCategory"/>

            <Label Content="Descriere:"/>
            <TextBox x:Name="txtDescription"/>

            <Label Content="Image Path:"/>
            <TextBox x:Name="txtImagePath"/>

            <Button Content="Adauga Cuvant" Click="btnAdd_Click"/>
            <Button Content="Sterge Cuvant" Click="btnDelete_Click"/>
            <Button Content="Editeaza Cuvant" Click="btnEdit_Click"/>
        </StackPanel>
    </Grid>
</Window>
